<div class="container">
  <h1>My task</h1>

    <% @tasks.each do |task| %>
        <li style="list-style-type: none;">
          <%= check_box_tag 'completed', task.completed ? true : false, task.completed %>
          <%= link_to (task.title), task_path(task.id)%>
          <%= link_to 'Delete', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </li>
    <% end %>

    <%= link_to 'Add a new task', new_task_path, :class => "btn btn-primary" %>
</div>
